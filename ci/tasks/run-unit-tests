#!/bin/bash

set -xe

cd articulate-ci-demo
#./mvnw package -Dmaven.test.skip=true -Dmaven.repo.local=../m2/rootfs/opt/m2
pwd
find ../../
ls -al ../
ls -al
mkdir -p target
echo "test" >> target/articulate-0.0.1-SNAPSHOT.jar
pwd
find .


cd ../out-repo
shopt -s dotglob
mv -f ../articulate-ci-demo/* ./
echo "test" >> target/articulate-0.0.1-SNAPSHOT.jar

git config --global user.email "${git-email}"
git config --global user.name "${git-name}"
git status
git add .
git commit -m "test"